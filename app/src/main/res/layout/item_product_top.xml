<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/scroll_gone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:drawableTop="@mipmap/im_food_pudding"
                android:background="@color/button"
                android:gravity="center"
                android:text="@string/product_all"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/product_special"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:drawableTop="@mipmap/im_food_tea"
                android:background="@color/b_red"
                android:gravity="center"
                android:text="@string/product_special"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_vote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:drawableTop="@mipmap/im_food_redwine"
                android:background="@color/a_blue"
                android:gravity="center"
                android:text="@string/product_vote"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/product_fruit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:drawableTop="@mipmap/im_food_coffee"
                android:background="@color/SpringGreen"
                android:gravity="center"
                android:text="@string/product_fruit"
                android:layout_weight="1"/>

        </LinearLayout>

        <com.youth.banner.Banner
            android:id="@+id/banner_view_pager"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

        </com.youth.banner.Banner>
        <!--<com.jude.rollviewpager.RollPagerView-->
            <!--android:id="@+id/roll_view_pager"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_height="150dp"-->
            <!--app:rollviewpager_play_delay="3000"/>-->
    </LinearLayout>

</LinearLayout>